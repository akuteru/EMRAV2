<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EMRA.MainTheme">

    <!-- Typography / Fonts -->
    <OnPlatform x:Key="IconFont" x:TypeArguments="x:String">
        <OnPlatform.Platforms>
            <On Platform="Android" Value="materialdesignicons-webfont.ttf#Materialdesignicons-webfont" />
            <On Platform="iOS" Value="icofont" />
        </OnPlatform.Platforms>
    </OnPlatform>
    <OnPlatform x:Key="FontDefault" x:TypeArguments="x:String">
        <On Platform="Android" Value="NotoSans-Regular.ttf#NotoSans-Regular"/>
        <On Platform="iOS" Value="NotoSans-Regular"/>
    </OnPlatform>
    <OnPlatform x:Key="FontDefaultBold" x:TypeArguments="x:String">
        <On Platform="Android" Value="NotoSans-Bold.ttf#NotoSans-Bold"/>
        <On Platform="iOS" Value="NotoSans-Bold"/>
    </OnPlatform>
    <OnPlatform x:Key="FontDefaultItalic" x:TypeArguments="x:String">
        <On Platform="Android" Value="NotoSans-Italic.ttf#NotoSans-Italic"/>
        <On Platform="iOS" Value="NotoSans-Italic"/>
    </OnPlatform>
    <!-- Colors -->
    <Color x:Key="PrimaryColor">#44d0e1</Color>
    <Color x:Key="PrimaryColorDark">#009faf</Color>
    <Color x:Key="PrimaryColorLight">#88ffff</Color>
    <Color x:Key="SecondaryColor">#ef5350</Color>
    <Color x:Key="SecondaryColorDark">#b61827</Color>
    <Color x:Key="SecondaryColorLight">#ff867c</Color>
